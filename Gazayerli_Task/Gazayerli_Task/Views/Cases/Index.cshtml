@model IEnumerable<Gazayerli_Task.Models.Cases>

@{
    ViewBag.Title = "Index";
}

<br />

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CaseName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CaseName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.CaseID }, new { @class = "btn btn-info" }) |
            @Html.ActionLink("Details", "Details", new { id=item.CaseID }, new { @class = "btn btn-warning" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.CaseID }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
