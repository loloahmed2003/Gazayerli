@model LawyerCases

@{
    ViewBag.Title = "Bill";
}

<h2>Bill</h2>


<div style="margin:5% 20%; border: 1px groove gray; border-radius: 5px; -webkit-box-shadow: -3px 21px 50px -18px rgba(0,0,0,0.75);
-moz-box-shadow: -3px 21px 50px -18px rgba(0,0,0,0.75);
box-shadow: -3px 21px 50px -18px rgba(0,0,0,0.75);">


    <div style="font-family:Tahoma; text-align:center">


        <dl class="dl-horizontal" style="padding:6%">


            <dt>@Html.Label("Lawyer Name", new { @class = "control-label" })</dt>
            <dd>@Html.Label("Lawyer Name", (string)ViewBag.lawyer.ApplicationUser.FirstName, new { @class = "form-control" })</dd>

            <dt>@Html.Label("Case Name", new { @class = "control-label" })</dt>
            <dd>@Html.Label("Case Name", (string)ViewBag.caseName.CaseName, new { @class = "form-control" })</dd>

            <dt>@Html.Label("Cost per Hour", new { @class = "control-label" })</dt>
            <dd>@Model.Lawyer.CostPerHour</dd>

            <hr />

            <dt>Total : </dt>
            <dd>@ViewBag.total</dd>




        </dl>

    </div>



</div>

