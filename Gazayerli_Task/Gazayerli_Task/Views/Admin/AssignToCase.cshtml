@model LawyerCases
@{
    ViewBag.Title = "AssignToCase";
}

<h2>AssignToCase</h2>




<form method="post" class="form-horizontal">
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.Label("Lawyer Name", new { @class = "col-sm-2 control-label" })
        <div class="col-sm-5">
            @Html.Label("Lawyer Name", (string)ViewBag.lawyer.ApplicationUser.FirstName, new { @class = "form-control" })
        </div>
        <div>
        </div>
    </div>
    <div class="form-group">
        @Html.Label("choose Case", new { @class = "col-sm-2 control-label" })
        <div class="col-sm-5">
            @Html.DropDownListFor(a => a.CaseID, ViewBag.cases as SelectList, "select case", new { @class = "form-control", required = "required" })
        </div>
        <div>
            @Html.ValidationMessageFor(a => a.CaseID)
        </div>
    </div>
    @Html.HiddenFor(a => a.LawyerID)
    <input type="submit" value="add" class="btn btn-primary" />
</form>
